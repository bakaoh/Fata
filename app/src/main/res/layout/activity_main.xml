<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bakaoh.fata.MainActivity">

    <Button
        android:id="@+id/download_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download test video"/>

    <Button
        android:id="@+id/tutorial02_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tutorial 02: Outputting to the Screen"
        app:layout_constraintTop_toBottomOf="@id/download_btn"/>

    <Button
        android:id="@+id/tutorial03_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tutorial 03: Playing Sound"
        app:layout_constraintTop_toBottomOf="@id/tutorial02_btn"/>

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
